@using Foxhole.Artillery.Data

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Gun Configuration
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="4">
                <MudNumericField HideSpinButtons @bind-Value="Characteristics.MinRange" Format="F0" Label="Min Range" Adornment="Adornment.End" AdornmentText="m" Min="0"/>
            </MudItem>
            <MudItem xs="4">
                <MudNumericField HideSpinButtons @bind-Value="Characteristics.MaxRange" Format="F0" Label="Max Range" Adornment="Adornment.End" AdornmentText="m" Min="0"/>
            </MudItem>
            <MudItem xs="4">
                <MudNumericField HideSpinButtons @bind-Value="Characteristics.RangeStep" Format="F2" Label="Increment" Adornment="Adornment.End" AdornmentText="m" Min="1"/>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public required FiringCharacteristics Characteristics { get; set; }

    private void Close()
    {
        MudDialog.Close();
    }

}