<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Wind Instructions
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudText>Measure the wind level according to the following reference image. Ensure you measure the direction correctly by standing facing the same direction that the flag is blowing into.</MudText>
            </MudItem>
            <MudItem xs="12" Class="d-flex align-center justify-center">
                <MudImage Src="images/Flag_Wind_Strengths.webp"/>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    private void Close()
    {
        MudDialog.Close();
    }

}